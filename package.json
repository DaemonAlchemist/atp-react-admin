{
  "name": "r2-starter-kit",
  "version": "2.0.0",
  "description": "R^2 Starter Kit is an boilerplate for web development built on top of React, Redux and Webpack based on Node.js environment, also containing webpack loader such as react-hmr and babel 6.",
  "main": "lib/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config webpack.config.dev.js",
    "build": "cross-env NODE_ENV=production webpack -p --config webpack.config.prod.js",
    "compile": "babel --presets env -d lib/ src/",
    "server": "node server.js",
    "watch": "node watch.js",
    "check-dependencies": "dependency-check ./package.json && dependency-check ./package.json --unused",
    "check": "ncu --packageFile package.json",
    "evergreen": "ncu -ua --packageFile package.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tpai/r2-starter-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tpai/r2-starter-kit/issues"
  },
  "author": "tonypai <tony77794@gmail.com> (http://github.com/tpai)",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.3",
    "atp-comic": ">=0.23.0",
    "atp-config": ">=0.3.5",
    "atp-flash": ">=0.2.3",
    "atp-inline-edit": ">=0.9.4",
    "atp-media": ">=0.8.2",
    "atp-pointfree": ">=0.8.1",
    "atp-react-tab-router": "^0.3.4",
    "atp-redux-entity": ">=0.2.5",
    "atp-sugar": "^0.8.4",
    "atp-tree": "^0.4.10",
    "atp-uac": ">=0.6.0",
    "atp-ui": ">=0.8.2",
    "autoprefixer": "^7.2.5",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.1.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "es6-promise": "^4.2.4",
    "express": "^4.16.2",
    "express-history-api-fallback": "^2.2.1",
    "history": "^4.7.2",
    "husky": "^0.14.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^22.1.4",
    "lodash": "^4.17.5",
    "node-sass": "^4.7.2",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.1.0",
    "promise": "^8.0.1",
    "react": "^16.2.0",
    "react-bootstrap": "^0.32.1",
    "react-dnd": "^2.5.4",
    "react-dnd-html5-backend": "^2.5.4",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "redux-form": "^7.2.3",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "superagent": "^3.8.2",
    "typeof": "^1.0.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-rewire": "^1.1.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react-hmre": "^1.1.1",
    "columnify": "^1.5.4",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "dependency-check": "^3.0.0",
    "eslint": "^4.17.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.6.1",
    "expect": "^22.1.0",
    "react-hot-loader": "^3.1.3",
    "redux-logger": "^3.0.6",
    "validate-commit-msg": "^2.14.0",
    "webpack-dev-server": "^2.11.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.{js,jsx}",
      "src/redux/modules/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
